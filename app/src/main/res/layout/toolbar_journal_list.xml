<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/semi_trans"
        android:fitsSystemWindows="true"
        android:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/toolbar_bg"
            android:layout_marginHorizontal="10dp"
            android:paddingEnd="8dp"
            android:elevation="4dp"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/white"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <!-- Toolbar content layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="8dp">

                <!-- Search EditText -->
                <EditText
                    android:id="@+id/edtTxtSrch"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/edt_txt_bg"
                    android:drawableStart="@drawable/search_icon"
                    android:drawablePadding="8dp"
                    android:hint="Search notes..."
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/grey"
                    android:textSize="14sp" />

                <!-- Layout Toggle Button -->
                <ImageButton
                    android:id="@+id/btnLayoutToggle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Toggle layout"
                    android:padding="8dp"
                    android:src="@drawable/ic_grid_view"
                    app:tint="@color/white" />

                <!-- Sort Button -->
                <ImageButton
                    android:id="@+id/btnSort"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Sort notes"
                    android:padding="8dp"
                    android:src="@drawable/ic_sort_descending"
                    app:tint="@color/white" />

                <!-- Sign Out Button -->


            </LinearLayout>

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

</layout>