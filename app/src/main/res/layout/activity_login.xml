<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/costum_bg_login"
        tools:context=".LoginActivity">

        <!-- Purple Gradient Wave at Top -->
        <ImageView
            android:id="@+id/waveTop"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/wave_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!-- White Wave at Bottom -->
        <ImageView
            android:id="@+id/waveBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/wave_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintStart_toStartOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/spacing_large"
                android:paddingTop="@dimen/spacing_xlarge"
                android:paddingBottom="@dimen/spacing_large">



                <!-- Welcome Text -->
                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="66dp"
                    android:gravity="center"
                    android:text="@string/welcome_message"
                    android:textColor="#4A148C"
                    android:textSize="@dimen/text_size_title"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Welcome to our Journal App" />

                <!-- Subtitle Text -->
                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:gravity="center"
                    android:text="@string/login_subtitle"
                    android:textColor="#6A1B9A"
                    android:textSize="@dimen/text_size_body"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvWelcome"
                    tools:text="Sign in to continue your journey" />

                <!-- Email AutoCompleteTextView -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEmail"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xlarge"
                    android:hint="@string/hint_email"
                    android:textColorHint="#6A1B9A"
                    app:boxStrokeColor="#7C3AED"
                    app:hintTextColor="#7C3AED"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
                    tools:hint="Email">

                    <AutoCompleteTextView
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:paddingVertical="@dimen/spacing_medium"
                        android:paddingStart="12dp"
                        android:textColor="#1A1A1A"
                        android:textSize="@dimen/text_size_body" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password EditText -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPassword"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:hint="@string/hint_password"
                    android:textColorHint="#6A1B9A"
                    app:boxStrokeColor="#7C3AED"
                    app:endIconMode="password_toggle"
                    app:endIconTint="#7C3AED"
                    app:hintTextColor="#7C3AED"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tilEmail"
                    tools:hint="Password">

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:paddingVertical="@dimen/spacing_medium"
                        android:textColor="#1A1A1A"
                        android:textSize="@dimen/text_size_body" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Forgot Password Text -->
                <TextView
                    android:id="@+id/forgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:padding="@dimen/spacing_small"
                    android:text="@string/forgot_password"
                    android:textColor="#7C3AED"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tilPassword"
                    tools:text="Forgot Password?" />

                <!-- Login Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:backgroundTint="#7C3AED"
                    android:paddingVertical="@dimen/spacing_medium"
                    android:text="@string/login"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_button"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/forgotPassword"
                    tools:text="LOGIN" />

                <!-- Divider with OR text -->
                <LinearLayout
                    android:id="@+id/dividerLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btnLogin">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#BDBDBD" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/spacing_medium"
                        android:text="@string/or"
                        android:textColor="#6A1B9A"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold"
                        tools:text="OR" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#BDBDBD" />
                </LinearLayout>

                <!-- Google Sign In Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGoogle"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:paddingVertical="@dimen/spacing_medium"
                    android:text="@string/continue_google"
                    android:textColor="#1A1A1A"
                    android:textSize="@dimen/text_size_body"
                    app:cornerRadius="12dp"
                   android:backgroundTint="@color/white"
                    app:icon="@drawable/google"
                    app:iconGravity="textStart"
                    app:iconPadding="@dimen/spacing_small"
                    app:iconTint="@null"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dividerLayout"
                    app:strokeColor="#BDBDBD"
                    app:strokeWidth="1dp"
                    tools:text="Continue with Google" />

                <!-- Create Account Button -->
                <LinearLayout
                    android:id="@+id/btnCreateAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:layout_marginBottom="@dimen/spacing_xlarge"
                    android:background="@drawable/signup_text_bg"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btnGoogle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Don't have an account? "
                        android:textColor="#424242"
                        android:textSize="@dimen/text_size_body" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign up"
                        android:textColor="#7C3AED"
                        android:textSize="@dimen/text_size_body"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>