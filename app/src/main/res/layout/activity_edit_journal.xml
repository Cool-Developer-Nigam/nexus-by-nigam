<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/costum_background"
        android:fitsSystemWindows="true">

        <!-- Toolbar -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/semi_trans">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/toolbar_bg"
                android:layout_marginHorizontal="12dp"
             >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"

                    >

                    <ImageButton
                        android:id="@+id/closeBtn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Close"
                        android:src="@drawable/back_logo"
                        app:tint="@color/black" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Edit Journal"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/btnPin"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Pin"
                        android:src="@drawable/ic_pin_outline" />

                    <ImageButton
                        android:id="@+id/saveBtn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Save"
                        android:src="@drawable/icons_save" />

                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Main Content -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- User Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="16dp">

                    <TextView
                        android:id="@+id/editUsernameTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Username"
                        android:textColor="@color/DarkBrown"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/editDateTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textColor="@color/grey"
                        android:textSize="12sp"
                        android:textStyle="italic" />

                </LinearLayout>

                <!-- Image for Journal -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardJournalImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/editDisplayImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxHeight="400dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="Journal Image" />

                </androidx.cardview.widget.CardView>

                <!-- Camera Button -->
                <ImageButton
                    android:id="@+id/editCameraButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/edt_txt_bg"
                    android:contentDescription="Change Image"
                    android:padding="12dp"
                    android:src="@drawable/ic_camera"
                    app:tint="@color/pinkish" />

                <!-- Title -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Title"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTitleEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@color/DarkBrown"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:alpha="0.3"
                    android:layout_marginBottom="16dp" />

                <!-- Thoughts -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Your thoughts..."
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etThoughts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="200dp"
                        android:gravity="top|start"
                        android:inputType="textMultiLine|textCapSentences"
                        android:textColor="@color/DarkBrown"
                        android:textSize="16sp"
                        android:lineSpacingExtra="4dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCancelEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:text="Cancel"
                        android:backgroundTint="#fff"
                        android:textAllCaps="false"
                        app:cornerRadius="24dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSaveEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/pinkish"
                        android:text="Save Changes"
                        android:textAllCaps="false"
                        app:cornerRadius="24dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <!-- Title Formatting Toolbar (Optional) -->
        <HorizontalScrollView
            android:id="@+id/titleFormattingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/lightCream"
            android:elevation="8dp"
            android:scrollbars="none"
            android:visibility="gone"
            android:paddingVertical="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="8dp">

                <ImageButton
                    android:id="@+id/btnTitleBold"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/formatting_button_normal"
                    android:contentDescription="Bold"
                    android:src="@drawable/ic_format_bold"
                    app:tint="@color/black" />

                <ImageButton
                    android:id="@+id/btnTitleItalic"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/formatting_button_normal"
                    android:contentDescription="Italic"
                    android:src="@drawable/ic_format_italic"
                    app:tint="@color/black" />

                <ImageButton
                    android:id="@+id/btnTitleUnderline"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/formatting_button_normal"
                    android:contentDescription="Underline"
                    android:src="@drawable/ic_format_underline"
                    app:tint="@color/black" />

                <ImageButton
                    android:id="@+id/btnTitleTextColor"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/formatting_button_normal"
                    android:contentDescription="Text Color"
                    android:src="@drawable/ic_format_color_text" />

                <ImageButton
                    android:id="@+id/btnBackgroundColor"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/formatting_button_normal"
                    android:contentDescription="Background Color"
                    android:src="@drawable/ic_format_color_fill"
                    app:tint="@color/black" />

            </LinearLayout>

        </HorizontalScrollView>

        <!-- Thoughts Formatting Toolbar (Optional) -->
        <HorizontalScrollView
            android:id="@+id/thoughtsFormattingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/lightCream"
            android:elevation="8dp"
            android:scrollbars="none"
            android:visibility="gone"
            android:paddingVertical="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="8dp">

                <ImageButton
                    android:id="@+id/btnThoughtsBold"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/formatting_button_normal"
                    android:contentDescription="Bold"
                    android:src="@drawable/ic_format_bold"
                    app:tint="@color/black" />

                <ImageButton
                    android:id="@+id/btnThoughtsItalic"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/formatting_button_normal"
                    android:contentDescription="Italic"
                    android:src="@drawable/ic_format_italic"
                    app:tint="@color/black" />

                <ImageButton
                    android:id="@+id/btnThoughtsUnderline"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/formatting_button_normal"
                    android:contentDescription="Underline"
                    android:src="@drawable/ic_format_underline"
                    app:tint="@color/black" />

                <ImageButton
                    android:id="@+id/btnThoughtsTextColor"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/formatting_button_normal"
                    android:contentDescription="Text Color"
                    android:src="@drawable/ic_format_color_text" />

            </LinearLayout>

        </HorizontalScrollView>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/editProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:elevation="10dp" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>