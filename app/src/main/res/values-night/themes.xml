<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Journal" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/semi_transparent_light</item>
        <item name="colorPrimaryDark">@color/teal_200</item>
        <item name="colorAccent">@color/teal_200</item>

        <!-- Status bar transparent for edge-to-edge -->
        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Force toolbar icons to be black -->
        <item name="colorControlNormal">#FFFFFF</item>
    </style>

    <style name="Theme.Journal" parent="Base.Theme.Journal" />
</resources>