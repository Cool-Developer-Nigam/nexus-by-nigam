<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Journal" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Primary colors -->
        <item name="colorPrimary">@color/semi_transparent_light</item>
        <item name="colorPrimaryDark">@color/teal_200</item>
        <item name="colorAccent">@color/teal_200</item>

        <!-- ðŸŸ¢ Status bar transparent for edge-to-edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Custom ActionBar -->
        <item name="actionBarStyle">@style/CustomActionBar.Light</item>
    </style>

    <style name="Theme.Journal" parent="Base.Theme.Journal" />

    <!-- Custom ActionBar style -->
    <style name="CustomActionBar.Light" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/teal_200</item>
        <item name="android:height">42dp</item>
        <item name="titleTextStyle">@style/ActionBarTitleText.Light</item>
    </style>

    <style name="ActionBarTitleText.Light" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>
